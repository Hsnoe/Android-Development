<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/zaman"
        android:layout_width="162dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="21dp"
        android:text="Time : "
        android:textColor="#B13636"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/score"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:layout_marginBottom="9dp"
        android:text="Score :0"
        android:textColor="#32A2CA"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="@+id/zaman"
        app:layout_constraintStart_toStartOf="@+id/zaman"
        app:layout_constraintTop_toBottomOf="@+id/zaman"
        tools:ignore="MissingConstraints" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="447dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="7dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreArttir"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/topss" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreArttir"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/topss" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreArttir"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/topss" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreArttir"
            app:layout_column="3"
            app:layout_row="0"
            app:srcCompat="@drawable/topss" />


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreArttir"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/topss" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreArttir"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/topss" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreArttir"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/topss" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreArttir"
            app:layout_column="3"
            app:layout_row="1"
            app:srcCompat="@drawable/topss" />


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreArttir"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/topss" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreArttir"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/topss" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreArttir"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/topss" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreArttir"
            app:layout_column="3"
            app:layout_row="2"
            app:srcCompat="@drawable/topss" />


    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>