<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8AE984"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/kelime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karışık Kelime"
        android:textColor="@color/design_default_color_background"
        android:textSize="24dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/cevap_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Kelimeyi bulun"
        android:textColor="@color/design_default_color_background"
        android:textSize="25dp"
        android:inputType="text"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/cevap_buton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kontrol Et"
        android:textColor="#B40404"

        app:strokeColor="#94A0EB"
        app:strokeWidth="25dp" />

    <TextView
        android:id="@+id/sonuc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

</LinearLayout>